<link rel="stylesheet" href="/css/MedicoAdm.css">

<a href="/adm" class="back-button">
    <button><span class="material-symbols-outlined">arrow_back</span> Voltar</button>
</a>


<div>
    <h2 class="titulo">Lista de Médicos</h2>

    <div id="tableContainer">

        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data de nascimento</th>
                    <th>CRM</th>
                    <th>Data de admissão</th>
                    <th>Especialidade</th>
                    <th>Dados </th>

                </tr>
            </thead>
            <tbody>
                <% TdsMedicos.forEach(function(item) { %>
                    <tr>
                        <td>
                            <%= item.nome %>
                        </td>
                        <td>
                            <%= item.cpf %>
                        </td>
                        <td>
                            <%= item.data_nasc %>
                        </td>
                        <td>
                            <%= item.crm %>
                        </td>
                        <td>
                            <%= item.data_admissao %>
                        </td>
                        <td>
                            <%= item.desc_especialidade %>
                        </td>
                        <td>
                            <a method="get" href="/PacienteInfo/<%= item.id %>"><span
                                    class="material-symbols-outlined">folder_shared</span>
                            </a>
                        </td>
                    </tr>


                    <% }); %>
            </tbody>
        </table>

    </div>
</div>

<div id="btn">
    <button class="button2" id="button2" onclick="window.location.href='/Cadastro'">Cadastrar novo médico</button>
</div>


